<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationAndMap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:paddingTop="20sp"
            android:paddingBottom="10sp"
            android:paddingHorizontal="15sp"
            >
            <TextView
                android:id="@+id/locationTxt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                />
            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="151 East Houston, Lower East Side, New York City,New York,United States"
                android:textSize="13sp"
                android:textColor="#B0000000"
                android:maxLines="2"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <fragment
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conLocation"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        tools:context=".view_a_property.MapsAndLocationFragment"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nearAttractions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/map"
        app:layout_constraintBottom_toBottomOf="@id/map"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10sp"
            android:layout_marginVertical="10sp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingHorizontal="10sp"
                android:background="@drawable/bottom_shadow"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/nearAttractions_train"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingVertical="6sp"
                    >
                    <com.example.findhome.custom_things.FontAwesome
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/nearAttractions_train_icon"
                        android:text="&#xf239;"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="19sp"
                        android:layout_marginTop="2dp"
                        android:paddingHorizontal="5sp"
                        android:textColor="#797A7C"
                        />
                    <TextView
                        android:id="@+id/nearAttractions_train_location"
                        app:layout_constraintLeft_toRightOf="@id/nearAttractions_train_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/nearAttractions_train_distance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Pennsylvania Station"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:maxLines="1"
                        android:layout_marginLeft="10sp"
                        />
                    <TextView
                        android:layout_marginTop="1dp"
                        android:id="@+id/nearAttractions_train_distance"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3.1 km"
                        android:textSize="14sp"
                        android:textColor="#797A7C"
                        android:maxLines="1"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/nearAttractions_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nearAttractions_train"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingVertical="6sp"
                    >
                    <com.example.findhome.custom_things.FontAwesome
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/nearAttractions_center_icon"
                        android:text="&#xf1ad;"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="19sp"
                        android:layout_marginTop="2dp"
                        android:textColor="#797A7C"
                        android:paddingHorizontal="5sp"
                        />
                    <TextView
                        android:id="@+id/nearAttractions_plane_center_location"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/nearAttractions_center_icon"
                        app:layout_constraintRight_toLeftOf="@id/nearAttractions_center_distance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="City Center (New York City)"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:maxLines="1"
                        android:layout_marginLeft="10sp"
                        />
                    <TextView
                        android:layout_marginTop="1sp"
                        android:id="@+id/nearAttractions_center_distance"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3.7 km"
                        android:textSize="14sp"
                        android:textColor="#797A7C"
                        android:maxLines="1"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/nearAttractions_airport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nearAttractions_center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingVertical="6sp"
                    >
                    <com.example.findhome.custom_things.FontAwesome
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/nearAttractions_airport_icon"
                        android:text="&#xf072;"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="19sp"
                        android:layout_marginTop="2dp"
                        android:textColor="#797A7C"
                        android:paddingHorizontal="5sp"
                        android:rotation="315"
                        />
                    <TextView
                        android:id="@+id/nearAttractions_plane_airport_location"
                        app:layout_constraintLeft_toRightOf="@id/nearAttractions_airport_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/nearAttractions_airport_distance"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="LaGuardia Airport"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:maxLines="1"
                        android:layout_marginLeft="10sp"
                        />
                    <TextView
                        android:layout_marginTop="1sp"
                        android:id="@+id/nearAttractions_airport_distance"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="11.4 km"
                        android:textSize="14sp"
                        android:textColor="#797A7C"
                        android:maxLines="1"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nearAttractions"
        >
        <TextView
            android:layout_marginTop="30sp"
            android:background="#6B434343"
            android:layout_width = "0dp"
            app:layout_constraintWidth_percent="0.90"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>




